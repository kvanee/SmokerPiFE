extends ../layout.pug

block content
  .row.mt-5.mb-5
    .col-md-10.m-auto
      .card.card-body.text-center
        h1
          i.fas.fa-check-circle
          |   Session Complete  
        br
        if(isAdmin)
          a.btn.btn-primary.btn-block.mb-2(href='/session/new') New Session
        a.btn.btn-secondary.btn-block(href='/users/logout') Logout
    br
  .row.mt-6.mb-6
    .col-md-10.m-auto
      .text-center
        h1
          =sessionName
  br
  canvas#myChart(width='400' height='400')
  input#sessionName(value=sessionName, style='display:none')

block footer_scripts
  script(src='/js/chart.min.js')
  script(src='/js/dashboardChart.js')