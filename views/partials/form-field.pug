mixin formfor(field, label, fieldValue, inputType, placeholderText)
    if(typeof validationErrors != 'undefined' && typeof validationErrors[field] != 'undefined')
        - var errors = true
    .form-group(class=errors ? 'has-danger' : '')
        label(for=field) #{label}
        input.form-control(id=field type=inputType name=field placeholder=placeholderText value=fieldValue class=errors ? 'is-invalid' : '')
        if(errors)
            each error in validationErrors[field]
                .invalid-feedback 
                    =error